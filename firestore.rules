rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{user_id} {
      allow read, create, update: if request.auth != null;
    }
    match /posts/{posts_id} {
      allow read, create, update: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.createBy.id;
    }
    match /chatroom/{chatroom_id} {
      allow read, create, update: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.member;
    }
  }
}


// user collection
// - any authenticated user can read & create
// - only users who "own/created" a document can update it ( user id's match)

// projects collection
// - any authenticated user can read ,create & update a document
// - only users who "own/created" a document can delete it